<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:colorAccent">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_color</item>

        System UI Configurations
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item> <!-- For making status bar content color dark -->
        <item name="android:navigationBarColor">@android:color/darker_gray</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <style name="splashTheme" parent="Theme.MyApplication">

        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:windowLightStatusBar">false</item> <!-- For making status bar content color dark -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_color</item>
        <item name="android:windowBackground">@drawable/logo_layer</item>

    </style>

    <style name="titlename">

        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="subtitlename">

        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    
    <style name="EditTextstyle">
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_7sdp</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="fontFamily">@font/poppins_regular</item>
<!--        <item name="android:background">@drawable/textfirld_shape</item>-->

    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/white</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemTextAppearanceActive">@style/SelectedBottomNavigationViewTextStyle</item>
    </style>

    <style name="SelectedBottomNavigationViewTextStyle" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
    </style>

    <style name="authStyle">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/auth_shape</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_7sdp</item>
    </style>

    <style name="text_style">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:fontFamily">@font/poppins_bold</item>



    </style>



</resources>